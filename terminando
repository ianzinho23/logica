programa{
	funcao inicio(){
		//Definindo Variáveis
		real primeirovalor, segundovalor
		real soma, media, produto, menorNumero, maiorNumero
		//Solicitar ao usário dois números.
		escreva("Digite o Primeiro Valor: ")
		leia(primeirovalor)
		escreva("Digite o Segundo Valor: ")
		leia(segundovalor)
		//Calcular
		soma=primeirovalor+segundovalor
		media=primeirovalor+segundovalor/2
		produto=primeirovalor*segundovalor
		//Achar Menor Número e Maior Numéro
		se (primeirovalor > segundovalor)
			
		//Exibindo os Valores
		escreva("n===Exibindo Valores===")
		escreva("\nPrimeiro Valor:  ",primeirovalor)
		escreva("\nSegundo Valor:  ",segundovalor)
		escreva("\nSoma:  ",soma)
		escreva("\nMédia:  ",media)
		escreva("\nProduto:  ",produto)
		
	}
}
