#include <stdio.h>
#include <locale.h>

	int main() {
		setlocale(LC_ALL,"");
		
		int i, nota;
		int media=0,soma=0;
		
		for (i= 1; i <= 3; i++){
		printf("Digite a sua %iª nota:", i);
		scanf("%i",&nota);
			
		soma=soma+nota;
		media=soma/3;			
}
		printf("\n====Exibindo resultados====");
		printf("\nMédia: %i \n",media);
		
		if(media >= 7){
			printf("Aprovado!!");
		}
		if (media <=4){
			printf("Reprovado.");
		}
		else{
			printf("Em recuperação");

		}
		
		
		return 0;
	}
