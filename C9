#include <stdio.h>
#include <locale.h>

	int main() {
		setlocale(LC_ALL,"");
		
		int i, nota;
		int media=0,soma=0;
		
		for (i= 1; i <= 4; i++){
		printf("Digite a sua %iª nota:", i);
		scanf("%i",&nota);
			
		soma=soma+nota;
		media=soma/4;			
}
		printf("\nMédia: %i \n",media);
		
		
		return 0;
	}
	
